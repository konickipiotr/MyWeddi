pipeline {
    agent any

    tools {
        maven "M3"
    }

    stages {
        stage('Build') {
            steps {
                sh "mvn clean install"
            }
        }

        stage('Test'){
            steps{
                sh "mvn test"
            }
        }

        stage('Deploy'){
            steps{
                sh """
                    mvn clean install
                    chmod +x ./deploy.sh
                    ./deploy.sh
                """
            }
        }
    }
}
